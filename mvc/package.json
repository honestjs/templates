{
	"name": "mvc",
	"module": "src/main.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@types/bun": "^1.2.18",
		"eslint": "^9.31.0",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"typescript-eslint": "^8.37.0"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"honestjs": "^0.1.4",
		"hono": "^4.8.5",
		"reflect-metadata": "^0.2.2",
		"@honestjs/class-validator-pipe": "^1.1.0",
		"http-essentials": "^1.3.1",
		"@honestjs/middleware": "^1.0.1",
		"@hono/zod-validator": "^0.7.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"zod": "^4.0.5"
	},
	"scripts": {
		"dev": "bun run --watch src/main.ts",
		"start": "bun dist/main.js",
		"build:bun": "bun build src/main.ts --outdir ./dist --target bun",
		"build:node": "bun build src/main.ts --outdir ./dist --target node",
		"test": "bun test",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"docker:build": "docker compose build",
		"docker:up": "docker compose up -d",
		"docker:up:build": "docker compose up -d --build",
		"docker:down": "docker compose down"
	}
