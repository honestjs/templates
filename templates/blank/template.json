{
	"name": "Blank Template",
	"description": "Empty project with basic setup",
	"version": "1.0.0",
	"author": "HonestJS Team",
	"license": "MIT",
	"keywords": ["honestjs", "template", "starter"],
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
	"files": ["package.json", "src/**/*", "README.md"],
	"optional": [
		"eslint.config.js",
		"prettier.config.js",
		"tsconfig.json",
		"Dockerfile",
		"docker-compose.yml",
		".dockerignore",
		".gitignore",
		".prettierignore",
		"LICENSE"
	],
	"scripts": {
		"post-install": "node shared/scripts/post-install.js"
	},
	"variables": {
		"projectName": {
			"type": "string",
			"required": true,
			"description": "Name of the project"
		},
		"packageManager": {
			"type": "choice",
			"choices": ["bun", "npm", "yarn", "pnpm"],
			"default": "bun",
			"description": "Package manager to use"
		},
		"typescript": {
			"type": "boolean",
			"default": true,
			"description": "Use TypeScript"
		},
		"eslint": {
			"type": "boolean",
			"default": true,
			"description": "Add ESLint for code linting"
		},
		"prettier": {
			"type": "boolean",
			"default": true,
			"description": "Add Prettier for code formatting"
		},
		"docker": {
			"type": "boolean",
			"default": false,
			"description": "Add Docker configuration"
		},
		"testing": {
			"type": "boolean",
			"default": false,
			"description": "Include testing setup"
		},
		"git": {
			"type": "boolean",
			"default": true,
			"description": "Initialize git repository"
		}
	}
}
